<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/estilo_gris"
    tools:context="com.example.alan.lotus_app2.Login">

    <ImageView
        android:background="@drawable/bordes_redondos_gris"
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo_lotus" />

    <EditText
        android:id="@+id/edtCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtPassword"
        android:layout_centerVertical="true"
        android:background="@color/color_transparente"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#ffffff"
        android:textColorHint="#000"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtCorreo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/color_transparente"
        android:ems="10"
        android:drawableLeft="@drawable/ic_action_password"
        android:fontFamily="sans-serif-condensed"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#ffffff"
        android:textColorHint="#000"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPassword"
        android:layout_marginTop="50dp"
        android:text="INGRESAR"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:ems="15"
        android:background="@drawable/dondo_redondo_gris"
        android:layout_centerHorizontal="true"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIngresar"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:text="¿Aún no tienes una cuenta?"/>
    <TextView
        android:id="@+id/txtEnviaRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnIngresar"
        android:layout_marginTop="50dp"
        android:textColor="#f9a825"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        android:text="¡Registrate Aquí!"/>
</RelativeLayout>
